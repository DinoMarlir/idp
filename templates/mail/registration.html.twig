{% apply inky_to_html|inline_css(source('@build/email.css')) %}
    <spacer size="16"></spacer>

    <container>

        <row class="header">
            <columns>

                <spacer size="16"></spacer>

                <h4 class="text-center">{{ config.name }}</h4>
            </columns>
        </row>
        <row>
            <columns>
                <spacer size="16"></spacer>

                <h1 class="text-center">{{ 'registration.title'|trans({}, 'mail') }}</h1>

                <spacer size="16"></spacer>

                <p class="text-center">
                    {{ 'registration.message'|trans({'%username%': username }, 'mail') }}
                </p>
                <button class="large expand" href="{{ url('confirm_registration_code', { token: token }) }}">
                    {{ 'registration.button'|trans({}, 'mail') }}
                </button>

                <hr/>

                <p>
                    <small>{{ 'registration.expiry'|trans({'%date%': expiry_date|format_date()}, 'mail') }}</small>
                </p>
            </columns>
        </row>
    </container>
{% endapply %}