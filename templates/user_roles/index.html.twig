{% extends "main.html.twig" %}

{% block title %}{{ 'user_roles.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="card">
        <table class="table table-striped table-hover">
            <colgroup>
                <col />
                <col class="column-lg" />
                <col class="column-lg" />
            </colgroup>

            <thead>
            <tr>
                <th>{{ 'label.name'|trans }}</th>
                <th>{{ 'label.services'|trans }}</th>
                <th>{{ 'actions.label'|trans }}</th>
            </tr>
            </thead>

            <tbody>
            {% for role in roles %}
                <tr>
                    <td>
                        {{ role.name }}
                        <p><small>{{ role.description }}</small></p>
                    </td>
                    <td>
                        <ul class="list-unstyled">
                            {% for service in role.enabledServices %}
                                <li title="{{ service.description }}">{{ service.name }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                    <td>
                        <a href="{{ path('edit_role', { id: role.id }) }}" class="btn btn-sm btn-primary">
                            {{ 'actions.edit'|trans }}
                        </a>

                        <a href="{{ path('remove_role', { id: role.id }) }}" class="btn btn-sm btn-danger">
                            {{ 'actions.remove'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="buttons">
        <a href="{{ path('add_role') }}" class="btn btn-sm btn-primary">
            <i class="fas fa-plus"></i> {{ 'user_roles.add.label'|trans }}
        </a>
    </div>
{% endblock%}