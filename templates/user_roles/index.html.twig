{% extends "main.html.twig" %}

{% block title %}{{ 'user_roles.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-9">
                <div class="card">
                    <table class="table table-striped table-hover table-bordered">
                        <colgroup>
                            <col />
                            <col />
                            <col class="column-md" />
                        </colgroup>

                        <thead>
                        <tr>
                            <th>{{ 'label.name'|trans }}</th>
                            <th>{{ 'label.services'|trans }}</th>
                            <th>{{ 'actions.label'|trans }}</th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for role in roles %}
                            <tr>
                                <td>
                                    {{ role.name }}
                                    <p><small>{{ role.description }}</small></p>
                                </td>
                                <td>
                                    <ul class="list-unstyled">
                                        {% for service in role.enabledServices %}
                                            <li title="{{ service.description }}">{{ service.name }}</li>
                                        {% endfor %}
                                    </ul>
                                </td>
                                <td>
                                    <a href="{{ path('edit_role', { id: role.id }) }}" class="btn btn-sm btn-primary" title="{{ 'actions.edit'|trans }}">
                                        <i class="fa fa-edit"></i>
                                    </a>

                                    <a href="{{ path('remove_role', { id: role.id }) }}" class="btn btn-sm btn-danger" title="{{ 'actions.remove'|trans }}">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card">
                    <div class="list-group list-group-flush">
                        <a href="{{ path('add_role') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-plus"></i> {{ 'user_roles.add.label'|trans }}
                        </a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fa fa-info-circle"></i> {{ 'info.label'|trans }}
                        </h5>

                        <p>
                            {{ 'user_roles.help'|trans }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock%}