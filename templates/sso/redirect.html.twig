{% extends "sso/main.html.twig" %}

{% block title %}{{ service.name }}{% endblock %}

{% block container_css %}redirect{% endblock %}

{% block content %}
    <div class="text-center">
        <i class="fa fa-sign-in fa-3x d-block text-secondary"></i>
        <h4>{{ 'sso.confirm.title'|trans }}</h4>
        <p>{{ 'sso.confirm.message'|trans({'%service%': service.name}) }}</p>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>{{ 'label.saml_attribute_name'|trans }}</th>
                <th>{{ 'label.value'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for attribute in attributes %}
                <tr>
                    <td>{{ attribute.name|attributeFriendlyName }}</td>
                    <td>
                        {% set values = attribute.allAttributeValues %}

                        {% if values is null or values|length == 0%}
                            <span class="badge badge-secondary">NULL</span>
                        {% elseif values|length == 1 %}
                            {{ values[0] }}
                        {% else %}
                            <ul>
                            {% for value in values %}
                                <li>{{ value }}</li>
                            {% endfor %}
                            </ul>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-6">
            {% block redirect %}{% endblock %}
        </div>
        <div class="col-md-6">
            <a href="{{ path('dashboard') }}" class="btn btn-secondary btn-block">{{ 'actions.cancel'|trans }}</a>
        </div>
    </div>


{% endblock %}