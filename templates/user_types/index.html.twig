{% extends "main.html.twig" %}

{% block title %}{{ 'user_types.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="card">
        <table class="table table-striped table-hover">
            <colgroup>
                <col class="column-lg" />
                <col class="column-md" />
                <col class="column-lg" />
                <col />
                <col class="column-lg" />
            </colgroup>

            <thead>
            <tr>
                <th>{{ 'label.name'|trans }}</th>
                <th>{{ 'label.alias'|trans }}</th>
                <th>{{ 'label.edu_person'|trans }}</th>
                <th>{{ 'label.services'|trans }}</th>
                <th>{{ 'actions.label'|trans }}</th>
            </tr>
            </thead>

            <tbody>
            {% for type in user_types %}
                <tr>
                    <td>{{ type.name }}</td>
                    <td>{{ type.alias }}</td>
                    <td>{{ type.eduPerson|join(', ') }}</td>
                    <td>
                        <ul class="list-unstyled">
                            {% for service in type.enabledServices %}
                                <li title="{{ service.description }}">{{ service.name }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                    <td>
                        <a href="{{ path('edit_user_type', { id: type.id }) }}" class="btn btn-sm btn-primary">
                            {{ 'actions.edit'|trans }}
                        </a>

                        <a href="{{ path('remove_user_type', { id: type.id }) }}" class="btn btn-sm btn-danger">
                            {{ 'actions.remove'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="buttons">
        <a href="{{ path('add_user_type') }}" class="btn btn-sm btn-primary">
            <i class="fas fa-plus"></i> {{ 'user_types.add.label'|trans }}
        </a>
    </div>
{% endblock%}