{% extends "main.html.twig" %}

{% block title %}{{ 'applications.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="card">
        <table class="table table-striped table-hover">
            <colgroup>
                <col />
                <col class="column-lg" />
                <col class="column-lg" />
            </colgroup>

            <thead>
            <tr>
                <th>{{ 'label.name'|trans }}</th>
                <th>{{ 'label.api_key'|trans }}</th>
                <th>{{ 'actions.label'|trans }}</th>
            </tr>
            </thead>

            <tbody>
            {% for app in applications %}
                <tr>
                    <td>
                        {{ app.name }}
                        <p><small>{{ app.description }}</small></p>
                    </td>
                    <td>
                        {{ app.apiKey }}
                    </td>
                    <td>
                        <a href="{{ path('edit_application', { id: app.id }) }}" class="btn btn-sm btn-primary">
                            {{ 'actions.edit'|trans }}
                        </a>

                        <a href="{{ path('remove_application', { id: app.id }) }}" class="btn btn-sm btn-danger">
                            {{ 'actions.remove'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="buttons">
        <a href="{{ path('add_application') }}" class="btn btn-sm btn-primary">
            <i class="fas fa-plus"></i> {{ 'applications.add.label'|trans }}
        </a>
    </div>
{% endblock%}