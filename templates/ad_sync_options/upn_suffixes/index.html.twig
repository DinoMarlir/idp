{% extends "main.html.twig" %}

{% block title %}{{ 'ad_sync_options.upn_suffixes.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('ad_sync_options') }}">{{ 'ad_sync_options.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-9">
                <div class="card">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-bordered card-table">
                            <colgroup>
                                <col class="column-lg">
                                <col>
                                <col class="column-md">
                            </colgroup>

                            <thead>
                            <tr>
                                <th>{{ 'label.suffix'|trans }}</th>
                                <th>{{ 'label.description'|trans }}</th>
                                <th>{{ 'actions.label'|trans }}</th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for suffix in suffixes %}
                                <tr>
                                    <td class="align-middle">
                                        {{ suffix.suffix }}
                                    </td>
                                    <td class="align-middle">
                                        {{ suffix.description }}
                                    </td>
                                    <td class="align-middle">
                                        <a href="{{ path('edit_ad_upn_suffixes', { uuid: suffix.uuid }) }}" class="btn btn-sm btn-primary" title="{{ 'actions.edit'|trans }}">
                                            <i class="fa fa-edit"></i>
                                        </a>

                                        <a href="{{ path('edit_ad_upn_suffixes', { uuid: suffix.uuid }) }}" class="btn btn-sm btn-danger" title="{{ 'actions.remove'|trans }}">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card">
                    <div class="list-group list-group-flush">
                        <a href="{{ path('add_ad_upn_suffixes') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-plus"></i> {{ 'ad_sync_options.upn_suffixes.add.label'|trans }}
                        </a>

                        <a href="{{ path('ad_sync_options') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-arrow-left"></i> {{ 'actions.back'|trans }}
                        </a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fa fa-info-circle"></i> {{ 'info.label'|trans }}
                        </h5>

                        <p>
                            {{ 'ad_sync_options.upn_suffixes.help'|trans }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock%}