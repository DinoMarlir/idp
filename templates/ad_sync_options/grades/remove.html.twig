{% extends "main.html.twig" %}

{% block title %}{{ 'ad_sync_options.grades.remove.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('ad_sync_options') }}">{{ 'ad_sync_options.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('ad_grades_sync_options') }}">{{ 'ad_sync_options.grades.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ option.grade }}</li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    {{ form_start(form) }}

    <div class="card">
        <div class="card-header">{{ form.group_general.vars.legend|trans }}</div>

        <div class="card-body">
            <div class="bs-callout bs-callout-danger">
                <h4><i class="fas fa-exclamation-triangle"></i> {{ 'caution'|trans }} <i class="fas fa-exclamation-triangle"></i></h4>
                <p>{{ 'ad_sync_options.grades.remove.help'|trans }}</p>
            </div>

            {{ form_row(form.group_general.confirm) }}
        </div>
    </div>

    <div class="buttons">
        <button type="submit" class="btn btn-sm btn-danger">
            <i class="fas fa-trash"></i> {{ 'actions.remove'|trans }}
        </button>

        <a href="{{ path('ad_grades_sync_options') }}" class="btn btn-sm btn-secondary">
            {{ 'actions.cancel'|trans }}
        </a>
    </div>
    {{ form_end(form) }}


{% endblock %}