{% extends "main.html.twig" %}

{% block title %}{{ 'ad_sync_options.label'|trans }}{% endblock %}

{% block content %}
    <div class="contentbox">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <colgroup>
                    <col />
                    <col class="column-lg" />
                    <col class="column-lg" />
                </colgroup>

                <thead>
                <tr>
                    <th>{{ 'label.name'|trans }}</th>
                    <th>{{ 'label.source'|trans }}</th>
                    <th>{{ 'label.user_type'|trans }}</th>
                    <th>{{ 'actions.label'|trans }}</th>
                </tr>
                </thead>

                <tbody>
                {% for option in sync_options %}
                    <tr>
                        <td>
                            {{ option.name }}

                            <p><small>{{ option.description }}</small></p>
                        </td>
                        <td>
                            <span class="label label-default">{% if option.sourceType == 'ou' %}{{ 'label.ou'|trans }}{% else %}{{ 'label.ad_group'|trans }}{% endif %}</span>
                            {{ option.source }}
                        </td>
                        <td>{{ option.userType.name }}</td>
                        <td>
                            <a href="{{ path('edit_ad_sync_option', { id: option.id }) }}" class="btn btn-sm btn-primary">
                                {{ 'actions.edit'|trans }}
                            </a>

                            <a href="{{ path('remove_ad_sync_option', { id: option.id }) }}" class="btn btn-sm btn-danger">
                                {{ 'actions.remove'|trans }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="buttons">
        <a href="{{ path('add_ad_sync_option') }}" class="btn btn-sm btn-primary">
            <i class="fa fa-plus"></i> {{ 'ad_sync_options.add'|trans }}
        </a>

        <a href="{{ path('ad_grades_sync_options') }}" class="btn btn-sm btn-secondary">
            <i class="fa fa-graduation-cap"></i> {{ 'ad_sync_options.grades.label'|trans }}
        </a>
    </div>
{% endblock%}