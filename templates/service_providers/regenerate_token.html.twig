{% extends "main.html.twig" %}

{% block title %}{{ 'service_providers.token.regenerate.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('service_providers') }}">{{ 'service_providers.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ service_provider.name }}</li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    {{ form_start(form) }}

    <div class="card">
        <div class="card-header">{{ 'service_providers.token.regenerate.label'|trans }}</div>

        <div class="card-body">
            <div class="bs-callout bs-callout-danger">
                <h4><i class="fas fa-exclamation-triangle"></i> {{ 'caution'|trans }} <i class="fas fa-exclamation-triangle"></i></h4>
                <p>{{ 'service_providers.token.regenerate.help'|trans }}</p>
            </div>

            {{ form_row(form.group_general.confirm) }}
        </div>
    </div>

    <div class="buttons">
        <button type="submit" class="btn btn-sm btn-danger">
            <i class="fas fa-refresh"></i> {{ 'service_providers.token.regenerate.submit'|trans }}
        </button>

        <a href="{{ path('service_providers') }}" class="btn btn-sm btn-secondary">
            {{ 'actions.cancel'|trans }}
        </a>
    </div>
    {{ form_end(form) }}


{% endblock %}