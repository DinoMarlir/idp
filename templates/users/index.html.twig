{% extends "main.html.twig" %}

{% block title %}{{ 'users.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body p-2">
            <form class="form-inline float-left" method="get">
                <div class="input-group">
                    <select name="type" class="form-control input-sm">
                        <option value="">{{ 'filter.all_types'|trans }}</option>
                        {% for t in types %}
                            <option value="{{ t.id }}" {% if type == t.id %}selected{% endif %}>{{ t.name }}</option>
                        {% endfor %}
                    </select>
                    <span class="input-group-append">
                        <button class="btn btn-primary btn-sm">
                            <i class="fas fa-filter"></i> {{ 'filter.label'|trans }}
                        </button>
                    </span>
                </div>

                {% if q is not empty %}
                    <input type="hidden" name="q" value="{{ q }}" />
                {% endif %}
            </form>

            <form class="form-inline float-right" method="get">
                {% if type is not empty %}
                    <input type="hidden" name="type" value="{{ type }}" />
                {% endif %}

                <div class="input-group">
                    <input type="text" value="{{ q }}" name="q" class="form-control input-sm" />

                    <span class="input-group-append">
                        <button class="btn btn-primary btn-sm" type="submit">
                            <i class="fas fa-search"></i> {{ 'search.label'|trans }}
                        </button>

                        {% if q is not empty %}
                            <a href="{{ path('users') }}" class="btn btn-secondary btn-sm">
                                {{ 'search.close'|trans }}
                            </a>
                        {% endif %}
                    </span>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <table class="table table-striped table-hover">
            <colgroup>
                <col class="column-lg" />
                <col class="column-lg" />
                <col class="column-lg" />
                <col class="column-lg" />
                <col class="column-lg" />
                <col />
                <col class="column-320" />
            </colgroup>

            <thead>
            <tr>
                <th>{{ 'label.username'|trans }}</th>
                <th>{{ 'label.firstname'|trans }}</th>
                <th>{{ 'label.lastname'|trans }}</th>
                <th>{{ 'label.user_type'|trans }}</th>
                <th>{{ 'label.user_roles'|trans }}</th>
                <th>{{ 'label.email'|trans }}</th>
                <th>{{ 'actions.label'|trans }}</th>
            </tr>
            </thead>

            <tbody>
            {% for user in users %}
                <tr>
                    <td>
                        {{ user.username }}

                        {% if not user.active %}
                            <span class="badge badge-danger">{{ 'label.not_active'|trans }}</span>
                        {% endif %}

                        {% if user.emailConfirmationPending %}
                            <span class="badge badge-warning">{{ 'label.pending_email_confirmation'|trans }}</span>
                        {% endif %}
                    </td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.type.name }}</td>
                    <td>
                        <ul class="list-unstyled">
                            {% for role in user.userRoles %}
                                <li title="{{ role.description }}">{{ role.name }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                    <td>{{ user.email }}</td>
                    <td>
                        <a href="{{ path('edit_user', { id: user.id }) }}" class="btn btn-sm btn-primary">
                            {{ 'actions.edit'|trans }}
                        </a>

                        <a href="{{ path('show_attributes', { id: user.id }) }}" class="btn btn-sm btn-primary">
                            {{ 'users.attributes.label'|trans }}
                        </a>

                        <a href="{{ path('remove_user', { id: user.id }) }}" class="btn btn-sm btn-danger">
                            {{ 'actions.remove'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {% include '@Common/includes/pagination.html.twig' with {
        currentFilters: { q: q, type: type },
        currentPage: page,
        paginationPath: 'users',
        lastPage: pages,
        showAlwaysFirstAndLast: true
    } only %}

    <div class="buttons">
        <a href="{{ path('add_user') }}" class="btn btn-sm btn-primary">
            <i class="fas fa-plus"></i> {{ 'users.add.label'|trans }}
        </a>
    </div>
{% endblock%}