{% extends "main.html.twig" %}

{% block title %}{{ 'users.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-9">
                <div class="card">
                    <table class="table table-striped table-hover table-bordered">
                        <colgroup>
                            <col class="column-lg" >
                            <col class="column-lg" >
                            <col class="column-lg" >
                            <col class="column-lg" >
                            <col class="column-lg" >
                            <col >
                            <col class="column-280" >
                        </colgroup>

                        <thead>
                        <tr>
                            <th>{{ 'label.username'|trans }}</th>
                            <th>{{ 'label.firstname'|trans }}</th>
                            <th>{{ 'label.lastname'|trans }}</th>
                            <th>{{ 'label.user_type'|trans }}</th>
                            <th>{{ 'label.user_roles'|trans }}</th>
                            <th>{{ 'label.email'|trans }}</th>
                            <th>{{ 'actions.label'|trans }}</th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>
                                    {{ user.username }}

                                    {% if not user.active %}
                                        <span class="badge badge-danger">{{ 'label.not_active'|trans }}</span>
                                    {% endif %}

                                    {% if user.emailConfirmationPending %}
                                        <span class="badge badge-warning">{{ 'label.pending_email_confirmation'|trans }}</span>
                                    {% endif %}
                                </td>
                                <td>{{ user.firstname }}</td>
                                <td>{{ user.lastname }}</td>
                                <td>{{ user.type.name }}</td>
                                <td>
                                    <ul class="list-unstyled">
                                        {% for role in user.userRoles %}
                                            <li title="{{ role.description }}">{{ role.name }}</li>
                                        {% endfor %}
                                    </ul>
                                </td>
                                <td>{{ user.email }}</td>
                                <td>
                                    <a href="{{ path('edit_user', { id: user.id }) }}" class="btn btn-sm btn-primary" title="{{ 'actions.edit'|trans }}">
                                        <i class="fa fa-edit"></i>
                                    </a>

                                    <a href="{{ path('show_attributes', { id: user.id }) }}" class="btn btn-sm btn-primary" title="{{ 'users.attributes.label'|trans }}">
                                        <i class="fa fa-user-tag"></i>
                                    </a>

                                    <a href="{{ path('remove_user', { id: user.id }) }}" class="btn btn-sm btn-danger" title="{{ 'actions.remove'|trans }}">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    {% include '@Common/includes/pagination.html.twig' with {
                        currentFilters: { q: q, type: type },
                        currentPage: page,
                        paginationPath: 'users',
                        lastPage: pages,
                        showAlwaysFirstAndLast: true
                    } only %}
                </div>
            </div>

            <div class="col-md-3">
                <div class="card">
                    <div class="list-group list-group-flush">
                        <a href="{{ path('add_user') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-plus"></i> {{ 'users.add.label'|trans }}
                        </a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <form method="get" class="mb-3">
                            <div class="input-group">
                                <select name="type" class="form-control" data-choice="true">
                                    <option value="">{{ 'filter.all_types'|trans }}</option>
                                    {% for t in types %}
                                        <option value="{{ t.id }}" {% if type == t.id %}selected{% endif %}>{{ t.name }}</option>
                                    {% endfor %}
                                </select>
                                <span class="input-group-append">
                                    <button class="btn btn-outline-primary" title="{{ 'filter.label'|trans }}">
                                        <i class="fas fa-filter"></i>
                                    </button>
                                </span>
                            </div>

                            {% if q is not empty %}
                                <input type="hidden" name="q" value="{{ q }}" >
                            {% endif %}
                        </form>

                        <form method="get">
                            {% if type is not empty %}
                                <input type="hidden" name="type" value="{{ type }}" >
                            {% endif %}

                            <div class="input-group">
                                <input type="text" value="{{ q }}" name="q" class="form-control" >

                                <span class="input-group-append">
                                    <button class="btn btn-outline-primary" type="submit" title="{{ 'search.label'|trans }}">
                                        <i class="fas fa-search"></i>
                                    </button>

                                    {% if q is not empty %}
                                        <a href="{{ path('users') }}" class="btn btn-secondary btn-sm">
                                            {{ 'search.close'|trans }}
                                        </a>
                                    {% endif %}
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock%}