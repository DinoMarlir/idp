{% extends "main.html.twig" %}

{% block title %}{{ 'service_attributes.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="card">
        <table class="table table-striped table-hover table-bordered">
            <colgroup>
                <col />
                <col class="column-lg" />
                <col />
                <col class="column-md" />
            </colgroup>

            <thead>
            <tr>
                <th>{{ 'label.name'|trans }}</th>
                <th>{{ 'label.saml_attribute_name'|trans }}</th>
                <th>{{ 'label.services'|trans }}</th>
                <th>{{ 'actions.label'|trans }}</th>
            </tr>
            </thead>

            <tbody>
            {% for attribute in attributes %}
                <tr>
                    <td>
                        {{ attribute.name }}

                        <p><small>{{ attribute.description }}</small></p>
                    </td>
                    <td>{{ attribute.samlAttributeName }}</td>
                    <td>
                        <ul class="list-unstyled">
                            {% for service in attribute.services %}
                                <li title="{{ service.description }}">{{ service.name }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                    <td>
                        <a href="{{ path('edit_attribute', { id: attribute.id }) }}" class="btn btn-sm btn-primary" title="{{ 'actions.edit'|trans }}">
                            <i class="fa fa-edit"></i>
                        </a>

                        <a href="{{ path('remove_attribute', { id: attribute.id }) }}" class="btn btn-sm btn-danger" title="{{ 'actions.remove'|trans }}">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="buttons">
        <a href="{{ path('add_attribute') }}" class="btn btn-sm btn-primary">
            <i class="fas fa-plus"></i> {{ 'service_attributes.add.label'|trans }}
        </a>
    </div>
{% endblock%}