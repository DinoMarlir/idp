{% extends "main.html.twig" %}

{% block title %}{{ 'dashboard.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}

    <div class="card">
        <div class="card-body d-flex flex-wrap">
            <div class="align-self-center text-center user-icon rounded-circle mr-3 bg-primary text-white" style="width: 50px; height: 50px;">
                <div class="d-flex align-items-center text-center h-100">
                    <i class="far fa-user fa-2x mx-auto"></i>
                </div>
            </div>
            <div class="align-self-center mr-auto">
                <h3 class="mb-1">{{ app.user.firstname }} {{ app.user.lastname }}</h3>
                <p class="text-muted">
                    {{ app.user.username }}
                </p>
            </div>
            <div class="align-self-center mr-3 d-none d-md-block">
                <h6 class="mb-1">
                    <i class="fa fa-shield-alt"></i> {{ 'two_factor.label'|trans }}
                </h6>

                {% if app.user.u2FAuthEnabled or app.user.googleAuthenticatorEnabled %}
                    <span class="badge badge-success">
                        <i class="fa fa-check"></i> {{ 'two_factor.enabled'|trans }}
                    </span>
                {% else %}
                    <span class="badge badge-danger">
                        <i class="fa fa-times"></i> {{ 'two_factor.disabled'|trans }}
                    </span>
                {% endif %}
            </div>

            <div class="align-self-center">
                <a href="{{ path('profile') }}" class="btn btn-outline-primary btn-sm my-2">
                    {{ 'profile.label'|trans }}
                </a>
            </div>
        </div>
    </div>

    <div class="card-deck mb-3">
        {% for service in services %}
            <div class="card">
                <a class="card-body" href="{{ service.url }}" target="_blank">
                    <h5 class="card-title">{{ service.name }}</h5>
                    <h6 class="card-subtitle text-muted">{{ service.description }}</h6>
                </a>
            </div>

            {% if loop.index % 4 == 0 %}
            </div>
            <div class="card-deck mb-3">
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}