{% extends "main.html.twig" %}

{% block title %}Dashboard{% endblock %}

{% block content %}
    <div class="contentbox">
        <h2>{{ 'dashboard.welcome'|trans({ '%firstname%': app.user.firstname, '%lastname%': app.user.lastname }) }}</h2>
    </div>

    <div class="row">
        {% for service in services %}
            <div class="col-md-3 col-sm-6 col-xs-12 widget link-widget">
                <a href="{{ service.url }}" target="_blank" title="{{ service.description }}" class="content">
                    {{ service.name }}
                </a>
            </div>
        {% endfor %}
    </div>

    <div class="row widgetrow">
        <div class="col-md-6">
            <div class="contentbox">
                <h4>{{ 'dashboard.data'|trans }}</h4>

                <div class="row no-padding">
                    <div class="col-md-3 col-sm-4 col-xs-4"><p>{{ 'label.username'|trans }}</p></div>
                    <div class="col-md-9 col-sm-8 col-xs-8"><p>{{ app.user.username }}</p></div>
                </div>

                <div class="row no-padding">
                    <div class="col-md-3 col-sm-4 col-xs-4"><p>{{ 'label.firstname'|trans }}</p></div>
                    <div class="col-md-9 col-sm-8 col-xs-8"><p>{{ app.user.firstname }}</p></div>
                </div>

                <div class="row no-padding">
                    <div class="col-md-3 col-sm-4 col-xs-4"><p>{{ 'label.lastname'|trans }}</p></div>
                    <div class="col-md-9 col-sm-8 col-xs-8"><p>{{ app.user.lastname }}</p></div>
                </div>

                <div class="row no-padding">
                    <div class="col-md-3 col-sm-4 col-xs-4"><p>{{ 'label.email'|trans }}</p></div>
                    <div class="col-md-9 col-sm-8 col-xs-8"><p>{{ app.user.email }}</p></div>
                </div>

                <div class="row">
                    <a href="{{ path('profile') }}" class="btn btn-primary btn-sm">{{ 'profile.label'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}