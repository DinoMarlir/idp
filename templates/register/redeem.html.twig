{% extends "@Common/auth/auth.html.twig" %}

{% block title %}{{ 'register.label'|trans({}, 'security') }}{% endblock %}

{% block content %}

    <div class="text-center">
        <i class="fas fa-qrcode fa-3x d-block text-secondary"></i>
        <h4>{{ 'register.redeem.label'|trans({}, 'security') }}</h4>
    </div>

    <div class="d-flex mb-3">
        <div class="align-self-center text-center user-icon rounded-circle mr-3 bg-primary text-white" style="width: 50px; height: 50px;">
            <div class="d-flex align-items-center text-center h-100">
                <i class="fas fa-user-graduate fa-2x mx-auto"></i>
            </div>
        </div>
        <div class="align-self-center pr-5 mr-auto">
            <p class="mb-0">
                {{ code.student|user }}
            </p>
        </div>
    </div>

    <form method="post" action="{{ path('register') }}">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('registration') }}">
        <input type="hidden" name="code" value="{{ code.code }}">

        <button class="card card-link text-left p-0 mb-3">
            <div class="card-body">
                <h5 class="card-title">{{ 'register.redeem.new_account.label'|trans({}, 'security') }}</h5>
                <p class="mb-0">
                    {{ 'register.redeem.new_account.message'|trans({}, 'security') }}
                </p>
            </div>
        </button>
    </form>

    <a href="{{ path('login') }}" class="card card-link">
        <div class="card-body">
            <h5 class="card-title">{{ 'register.redeem.existing_account.label'|trans({}, 'security') }}</h5>
            <p class="mb-0">
                {{ 'register.redeem.existing_account.message'|trans({}, 'security') }}
            </p>
        </div>
    </a>

{% endblock %}