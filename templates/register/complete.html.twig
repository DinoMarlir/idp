{% extends "@Common/simple/main.html.twig" %}

{# we have to use the non-horizontal bootstrap theme #}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}{{ 'register.label'|trans({}, 'security') }}{% endblock %}

{% block javascript %}
    <script src="{{ asset('build/app.js') }}"></script>
{% endblock %}

{% block content %}

    <div class="text-center">
        <i class="fas fa-user-check fa-3x d-block text-secondary"></i>
        <h4>{{ 'register.complete.label'|trans({}, 'security') }}</h4>

        <p>{{ 'register.complete.message'|trans({}, 'security') }}</p>
    </div>

    <div class="d-flex align-items-center mb-3">
        <div class="text-center user-icon rounded-circle mr-3 bg-primary text-white flex-shrink-0" style="width: 50px; height: 50px;">
            <div class="d-flex align-items-center text-center h-100">
                <i class="fas fa-user-graduate fa-2x mx-auto"></i>
            </div>
        </div>
        <div class="align-self-center pr-5 flex-fill">
            <p class="mb-0">
                {{ code.student|user }}
            </p>
        </div>
    </div>

    {% include '@Common/auth/errors.html.twig' %}

    {{ form_start(form) }}
    <input type="hidden" name="code" value="{{ code.code }}">
    <div class="row">
        <div class="col-md-6">
            <h5 class="card-title">{{ 'register.complete.required'|trans({}, 'security') }}</h5>

            <div class="alert alert-danger d-flex align-items-center">
                <i class="fa fa-exclamation-triangle mr-2"></i>
                <p class="mb-0">{{ 'register.complete.caution'|trans({}, 'security') }}</p>
            </div>

            <div class="alert alert-danger d-flex align-items-center">
                <i class="fa fa-exclamation-triangle mr-2"></i>
                <p class="mb-0">{{ 'register.complete.caution_email'|trans({}, 'security') }}</p>
            </div>

            {{ form_row(form.username) }}
            {{ form_widget(form.password) }}
            <div class="mb-3">
                {{ form_widget(form.agreePrivacyPolicy) }}
            </div>

            <a href="{{ path('register_privacy_policy') }}" class="btn btn-outline-primary btn-sm mb-2" target="_blank">
                <i class="fas fa-external-link-alt"></i> {{ 'privacy_policy.show'|trans }}
            </a>
        </div>

        <div class="col-md-6">
            <h5 class="card-title">{{ 'register.complete.voluntary'|trans({}, 'security') }}</h5>

            {{ form_widget(form) }}
        </div>
    </div>

    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-6">
                <button class="btn btn-primary w-100" type="submit">{{ 'register.complete.button'|trans({}, 'security') }}</button>
            </div>
            <div class="col-md-6">
                <a href="{{ path('login') }}" class="btn btn-secondary w-100" role="button">{{ 'actions.cancel'|trans }}</a>
            </div>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}