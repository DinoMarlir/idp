{% extends "@Common/auth/auth.html.twig" %}

{# we have to use the non-horizontal bootstrap theme #}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}{{ 'register.label'|trans({}, 'security') }}{% endblock %}

{% block javascript %}
    <script src="{{ asset('build/app.js') }}"></script>
{% endblock %}

{% block content %}

    <div class="text-center">
        <i class="fas fa-user-check fa-3x d-block text-secondary"></i>
        <h4>{{ 'register.complete.label'|trans({}, 'security') }}</h4>

        <p>{{ 'register.complete.message'|trans({}, 'security') }}</p>
    </div>

    <hr >

    {% include '@Common/auth/errors.html.twig' %}

    <div class="alert alert-danger">
        <i class="fa fa-exclamation-triangle"></i> {{ 'register.complete.caution'|trans({}, 'security') }}
    </div>

    {{ form_start(form) }}

    {{ form_widget(form.username) }}
    {{ form_widget(form.password) }}
    <div class="form-group">
    {{ form_widget(form.agreePrivacyPolicy) }}
    </div>

    <a href="{{ path('register_privacy_policy') }}" class="btn btn-outline-primary btn-sm mb-2" target="_blank">
        <i class="fas fa-external-link-alt"></i> {{ 'privacy_policy.show'|trans }}
    </a>

    <div class="d-block mb-2">
        <a href="#voluntary" data-toggle="collapse" class="btn btn-outline-primary btn-sm" role="button">
            <i class="fas fa-plus"></i> {{ 'register.complete.voluntary'|trans({}, 'security') }}
        </a>
    </div>

    <div id="voluntary" class="collapse">
        {{ form_widget(form) }}
    </div>

    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-6">
                <button class="btn btn-primary btn-block" type="submit">{{ 'register.complete.button'|trans({}, 'security') }}</button>
            </div>
            <div class="col-md-6">
                <a href="{{ path('login') }}" class="btn btn-secondary btn-block" role="button">{{ 'actions.cancel'|trans }}</a>
            </div>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}